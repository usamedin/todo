generator client {
  provider = "prisma-client-js"
  output   = "../src/db/generated/client"
}

datasource todo {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  TODO
  IN_PROGRESS
  DONE
}

model ToDo {
  id        String     @id @default(cuid()) @map("uuid")
  value     String
  status    TodoStatus
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  userId    String
}
